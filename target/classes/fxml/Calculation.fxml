<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Calculation">

    <children>
        <ImageView fitHeight="600.0" fitWidth="1000.0">
            <image>
                <Image url="@assets/first.jpg" />
            </image>
        </ImageView>
        <Button fx:id="moveBackBtn" layoutX="14.0" layoutY="511.0" mnemonicParsing="false" onAction="#moveBack" prefHeight="37.0" prefWidth="95.0" style="-fx-background-color: black;" text="back" textFill="WHITE">
            <font>
                <Font size="21.0" />
            </font>
        </Button>
        <Button fx:id="calculateButton" layoutX="787.0" layoutY="511.0" mnemonicParsing="false" onAction="#calculateClick" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: black;" text="calculate" textFill="WHITE">
            <font>
                <Font size="21.0" />
            </font>
        </Button>
      <Pane layoutX="209.0" layoutY="135.0" prefHeight="376.0" prefWidth="467.0">
         <children>
            <TextField fx:id="depositMoney" layoutX="116.0" layoutY="122.0" prefHeight="45.0" prefWidth="226.0" promptText="Deposit money" />
            <Label fx:id="incomeField" layoutX="119.0" layoutY="316.0" prefHeight="31.0" prefWidth="292.0" text="Your income: ">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <DatePicker fx:id="dateOfWithdraw" layoutX="116.0" layoutY="243.0" prefHeight="45.0" prefWidth="226.0" promptText="Date of withdraw" />
            <DatePicker fx:id="dateOfDeposit" layoutX="116.0" layoutY="183.0" prefHeight="45.0" prefWidth="226.0" promptText="Date of deposit" />
            <ChoiceBox fx:id="currencies" layoutX="116.0" layoutY="62.0" prefHeight="45.0" prefWidth="226.0" />
         </children>
      </Pane>
    </children>
</AnchorPane>
